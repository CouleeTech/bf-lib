{
  "name": "bf-lib",
  "version": "1.6.3",
  "private": false,
  "description": "the standard client library for block-5 services",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp -rf LICENSE README.md package.json lib/",
    "commit": "git-cz",
    "check": "tsc -p tsconfig.check.json -noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "postversion": "git push && git push --tags",
    "preversion": "npm run lint",
    "test": "jest",
    "test:cov": "jest --coverage",
    "version": "npm run format && git add -A src",
    "patchpub": "npm version patch && npm run pub",
    "minorpub": "npm version minor && npm run pub",
    "majorpub": "npm version major && npm run pub",
    "pub": " npm test && npm run lint && npm run build && cd lib && rm -f tsconfig.build.tsbuildinfo && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/CouleeTech/bf-lib.git"
  },
  "keywords": [
    "bf-lib",
    "coulee",
    "tech",
    "block-5",
    "standard",
    "client",
    "library"
  ],
  "author": "Coulee Tech",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CouleeTech/bf-lib/issues"
  },
  "homepage": "https://github.com/CouleeTech/bf-lib#readme",
  "husky": {
    "hooks": {
      "pre-push": "npm run check && npm run lint",
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bf-types": "^2.7.24",
    "decimal.js": "^10.2.0",
    "socket.io-client": "^2.3.0",
    "socket.io-msgpack-parser": "^2.2.0",
    "voca": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/voca": "^1.4.0",
    "commitizen": "^4.0.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
