{
  "name": "bf-lib",
  "version": "2.0.0",
  "private": false,
  "description": "the standard client library for block-5 software",
  "scripts": {
    "build": "rimraf lib api auth common livesync module multitool system && tsc -p tsconfig.build.json",
    "commit": "git-cz",
    "check": "tsc -p tsconfig.check.json -noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "lint": "eslint './src/**/*.{js,ts,tsx}' --fix",
    "postversion": "git push && git push --tags",
    "preversion": "npm run lint",
    "test": "jest",
    "test:cov": "jest --coverage",
    "version": "npm run format && git add -A src",
    "patchpub": "npm version patch && npm publish",
    "minorpub": "npm version minor && npm publish",
    "majorpub": "npm version major && npm publish",
    "prepare": "npm test && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/CouleeTech/bf-lib.git"
  },
  "keywords": [
    "bf-lib",
    "coulee",
    "tech",
    "block-5",
    "standard",
    "client",
    "library"
  ],
  "author": "Coulee Tech",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CouleeTech/bf-lib/issues"
  },
  "homepage": "https://github.com/CouleeTech/bf-lib#readme",
  "husky": {
    "hooks": {
      "pre-push": "npm run check && npm run lint",
      "pre-commit": "npm run check && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bf-types": "^3.3.0",
    "decimal.js": "^10.2.0",
    "socket.io-client": "^2.3.0",
    "socket.io-msgpack-parser": "^2.2.0",
    "voca": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@types/socket.io-client": "^1.4.33",
    "@types/voca": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/eslint-plugin-tslint": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "commitizen": "^4.1.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  }
}
