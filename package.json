{
  "name": "bf-lib",
  "version": "4.4.1",
  "private": false,
  "description": "the standard client library for block-5 software",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "npm run clean && npm run build",
    "check": "tsc -p tsconfig.check.json -noEmit",
    "clean": "rimraf index.js index.d.ts lib api auth common livesync module multitool system",
    "commit": "git-cz",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "lint": "eslint \"./src/**/*.{js,ts,tsx}\" --fix",
    "lint-staged": "lint-staged",
    "postversion": "git push && git push --tags",
    "prepare": "husky install && npm test && npm run lint && npm run build:clean",
    "preversion": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "version": "npm run format && git add -A src",
    "patchpub": "npm version patch && npm publish",
    "minorpub": "npm version minor && npm publish",
    "majorpub": "npm version major && npm publish",
    "postpublish": "npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/CouleeTech/bf-lib.git"
  },
  "keywords": [
    "bf-lib",
    "coulee",
    "tech",
    "block-5",
    "standard",
    "client",
    "library"
  ],
  "author": "Coulee Tech",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CouleeTech/bf-lib/issues"
  },
  "homepage": "https://github.com/CouleeTech/bf-lib#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@timwoods/handlebars": "^2.0.5",
    "axios": "^0.21.0",
    "decimal.js": "^10.2.1",
    "deep-equal": "^2.0.5",
    "deepmerge": "^4.2.2",
    "luxon": "^1.26.0",
    "voca": "^1.4.0"
  },
  "peerDependencies": {
    "bf-types": "^5.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/axios": "^0.14.0",
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^26.0.22",
    "@types/luxon": "^1.26.4",
    "@types/node": "^14.17.32",
    "@types/voca": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "bf-types": "^5.33.0",
    "commitizen": "^4.2.2",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
